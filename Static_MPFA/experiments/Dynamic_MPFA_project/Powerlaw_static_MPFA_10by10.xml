<?xml version="1.0" encoding="utf-8"?>
<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <system threads="0" />
    <experiment length="900"
                ticks_per_second="32"
		random_seed="0"/>
  </framework>

  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>

    <MPFA_controller id="MPFA"
                     library="build/source/MPFA/libMPFA_controller">
      <actuators>
        <differential_steering implementation = "default"/>
      </actuators>

      <sensors>
        <footbot_proximity    implementation = "default" show_rays = "false"/>

	<positioning          implementation = "default"
					/>	

        <footbot_motor_ground implementation = "rot_z_only"/>
      </sensors>

      <params>

        <settings TargetDistanceTolerance           = "0.05"
		  TargetAngleTolerance               = "0.1"
		  FoodDistanceTolerance              = "0.13"
                  NestDistanceTolerance = "0.05"  
                  NestAngleTolerance = "0.1"
                  SearchStepSize                    = "0.08"
                  RobotForwardSpeed                 = "16.0"
                  RobotRotationSpeed                = "8.0"
		  DestinationNoiseStdev             = "0.0"
		  PositionNoiseStdev             = "0.00"
		  ResultsDirectoryPath              = "results/"/>
      </params>

    </MPFA_controller>

  </controllers>

  <loop_functions library = "build/source/MPFA/libMPFA_loop_functions"
                  label   = "MPFA_loop_functions">

    <!-- evolvable parameters -->
        <MPFA       ProbabilityOfSwitchingToSearching = "0.789084171088"
                    ProbabilityOfReturningToNest      = "0.00665642851829"
                    UninformedSearchVariation         = "10.5223357671"
                    RateOfInformedSearchDecay         = "0.551018272063"
                    RateOfSiteFidelity                = "0.344383138962"
                    RateOfLayingPheromone             = "10.016594921"
                    RateOfPheromoneDecay              = "0.266650859406"
		    PrintFinalScore = "1"
		    />

         <settings
	     MaxSimTimeInSeconds = "900"
	     MaxSimCounter = "1"
	     VariableFoodPlacement = "0"
	     OutputData = "0"
	     DrawDensityRate = "4"
	     DrawIDs = "1"
	     DrawTrails = "1"
	     DrawTargetRays = "0"
	     FoodDistribution = "2"
	     FoodItemCount = "384"
	     NumberOfClusters = "6"
	     ClusterWidthX = "8"
	     ClusterWidthY = "8"
	     FoodRadius = "0.05"
	     NestRadius = "0.25"
	     NestElevation = "0.01"
      NestPosition_0="2.5, 2.5" 
      NestPosition_1="2.5, -2.5" 
      NestPosition_2="-2.5, 2.5" 
      NestPosition_3="-2.5, -2.5"
      />

  </loop_functions>

  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <arena size="10.0, 10.0, 1" center="0,0,0.5">

    <floor id="floor" source="loop_functions" pixels_per_meter="10"/>

    <!--<distribute>
      <position method="grid"
                center="0.0, 0.0, 0.0"
                distances="0.2, 0.2, 0.0"
                layout="4, 6, 1" />
      <orientation method="constant" values="0.0, 0.0, 0.0" />
      <entity quantity="12" max_trials="100">
        <foot-bot id="MPFA_">
          <controller config="MPFA"/>
        </foot-bot>
      </entity>
    </distribute>
    -->
   <distribute>
            <position max="3, 3.0, 0.0" method="uniform" min="2, 2, 0.0"/>
            <orientation mean="0, 0, 0" method="gaussian" std_dev="360, 0, 0"/>
            <entity max_trials="100" quantity="6">
                <foot-bot id="MPFA_0"><controller config="MPFA"/></foot-bot>
            </entity>
        </distribute>
        <distribute>
            <position max="3, -2, 0.0" method="uniform" min="2, -3, 0.0"/>
            <orientation mean="0, 0, 0" method="gaussian" std_dev="360, 0, 0"/>
            <entity max_trials="100" quantity="6">
                <foot-bot id="MPFA_1"><controller config="MPFA"/></foot-bot>
            </entity>
        </distribute>
        <distribute>
            <position max="-2, 3.0, 0.0" method="uniform" min="-3, 2, 0.0"/>
            <orientation mean="0, 0, 0" method="gaussian" std_dev="360, 0, 0"/>
            <entity max_trials="100" quantity="6">
                <foot-bot id="MPFA_2"><controller config="MPFA"/></foot-bot>
            </entity>
        </distribute>
        <distribute>
            <position max="-2, -2, 0.0" method="uniform" min="-3, -3, 0.0"/>
            <orientation mean="0, 0, 0" method="gaussian" std_dev="360, 0, 0"/>
            <entity max_trials="100" quantity="6">
                <foot-bot id="MPFA_3"><controller config="MPFA"/></foot-bot>
            </entity>
        </distribute>

     
     <cylinder id="cyl1" radius="0.15" height="0.1"
              movable="false" mass="2.5">
      <body position="2.5,2.5,0" orientation="45,0,0" />
    </cylinder>
    
    <cylinder id="cyl2" radius="0.15" height="0.1"
              movable="false" mass="2.5">
      <body position="2.5,-2.5,0" orientation="45,0,0" />
    </cylinder>

    <cylinder id="cyl3" radius="0.15" height="0.1"
              movable="false" mass="2.5">
      <body position="-2.5,2.5,0" orientation="45,0,0" />
    </cylinder>

    <cylinder id="cyl4" radius="0.15" height="0.1"
              movable="false" mass="2.5">
      <body position="-2.5,-2.5,0" orientation="45,0,0" />
    </cylinder>

  </arena> 
    
  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <dynamics2d id="dyn2d" />
  </physics_engines>

  <!-- ********* -->
  <!-- * Media * -->
  <!-- ********* -->
  <media><led id="leds"/></media>
